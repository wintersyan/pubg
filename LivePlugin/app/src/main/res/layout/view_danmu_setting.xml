<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:orientation="vertical"
    android:background="@color/color7"
    android:gravity="center_vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="152dip"
        android:layout_gravity="center_vertical"
        >

        <LinearLayout
            android:id="@+id/danmu_setting_position_container"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/danmu_setting_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:layout_marginLeft="10dip"
                android:layout_gravity="center_vertical"
                android:textSize="11dp"
                android:text="弹幕位置" />

            <RadioGroup
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="10dip"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                >

                <RadioButton
                    android:id="@+id/danmu_setting_position1"
                    android:layout_width="25dp"
                    android:layout_height="16dp"
                    android:background="@drawable/danmu_setting_position1_bg"
                    android:button="@null"
                    android:layout_marginRight="8dp"
                    />

                <RadioButton
                    android:id="@+id/danmu_setting_position2"
                    android:layout_width="25dp"
                    android:layout_height="16dp"
                    android:background="@drawable/danmu_setting_position2_bg"
                    android:button="@null"
                    android:layout_marginRight="8dp"
                     />

                <RadioButton
                    android:id="@+id/danmu_setting_position3"
                    android:layout_width="25dp"
                    android:layout_height="16dp"
                    android:background="@drawable/danmu_setting_position3_bg"
                    android:button="@null"
                     />
            </RadioGroup>

        </LinearLayout>
        <View
            android:layout_below="@+id/danmu_setting_position_container"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/color13"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"/>

        <LinearLayout
            android:id="@+id/danmu_setting_size_container"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="50dip"
           >

            <TextView
                android:id="@+id/danmu_setting_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:textColor="#ffffff"
                android:layout_gravity="center_vertical"
                android:textSize="11dp"
                android:text="弹幕大小" />

            <RadioGroup
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="10dip"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                >

                <RadioButton
                    android:id="@+id/danmu_setting_size1"
                    android:layout_width="25dp"
                    android:layout_height="16dp"
                    android:background="@drawable/danmu_setting_size1_bg"
                    android:button="@null"
                    android:layout_marginRight="8dp"
                    />

                <RadioButton
                    android:id="@+id/danmu_setting_size2"
                    android:layout_width="25dp"
                    android:layout_height="16dp"
                    android:background="@drawable/danmu_setting_size2_bg"
                    android:button="@null"
                    android:layout_marginRight="8dp"
                    />

                <RadioButton
                    android:id="@+id/danmu_setting_size3"
                    android:layout_width="25dp"
                    android:layout_height="16dp"
                    android:background="@drawable/danmu_setting_size3_bg"
                    android:button="@null"
                    />
            </RadioGroup>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_below="@+id/danmu_setting_size_container"
            android:layout_height="2px"
            android:background="@color/color13"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"/>

        <com.tencent.tga.liveplugin.base.view.DanmuSeekBar
            android:id="@+id/danmu_setting_bar"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dip"
             />
    </RelativeLayout>
</LinearLayout>
