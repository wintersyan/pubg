<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    >

    <ImageView
        android:id="@+id/mIvLeftLine"
        android:layout_width="1dp"
        android:layout_height="32dp"
        android:background="#202831"
        android:layout_marginLeft="4.5dp"
        />

    <ImageView
        android:id="@+id/mIvBlueDot"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@drawable/schedule_gray_point"
        android:layout_marginTop="13dp"
        />

    <TextView
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:id="@+id/mMatchDate"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:textSize="9dp"
        android:text=""
        android:gravity="center"
        android:layout_marginLeft="4dp"
        android:textColor="#888686"
        android:layout_centerVertical="true"
        android:layout_alignTop="@+id/mIvBlueDot"
        android:layout_marginTop="-2dp"
        />
</RelativeLayout>
