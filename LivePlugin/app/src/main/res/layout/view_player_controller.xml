<?xml version="1.0" encoding="utf-8"?>


<com.tencent.tga.liveplugin.live.player.ui.video.view.PlayerController
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/video_bottom_height"
    android:layout_gravity="bottom"
    android:background="@drawable/live_bottom_bg"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/live_pause"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:clickable="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center_vertical"
        android:scaleType="center"
        android:src="@drawable/control_icon_playing" />


    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="25dip"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:paddingLeft="15dp"
        android:paddingRight="35dp"
        >
        <TextView
            android:id="@+id/edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@drawable/live_fullscreen_chat_msg_tv_bg"
            android:clickable="false"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:hint="@string/hint_live_chat"
            android:imeOptions="actionSend"
            android:singleLine="true"
            android:textColor="#FFFFFFFF"
            android:textColorHint="#444444"
            android:textSize="11dp"
            android:visibility="gone"
            android:paddingLeft="50dp"
            />
        <TextView
            android:id="@+id/edit_hot"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:textColor="#444444"
            android:textSize="11dp"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:gravity="center_vertical"
            android:text="热词"
            android:visibility="gone"
            android:drawablePadding="3dip"
            android:background="@drawable/live_fullscreen_chat_msg_hot_bg"
            android:drawableRight="@drawable/hotworld_fullscreen_up"/>
        <View
            android:id="@+id/div"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#FF253e55"
            android:layout_toRightOf="@+id/edit_hot"
            android:visibility="gone"/>
    </RelativeLayout>


    <ToggleButton
        android:id="@+id/danmu_oper"
        android:layout_width="33dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:clickable="true"
        android:layout_marginLeft="20dp"
        android:scaleType="center"
        android:visibility="visible"
        android:background="#00000000"
        android:button="@drawable/danmu_switch_btn"
        android:textOff="@null"
        android:textOn="@null"/>

    <TextView
       android:id="@+id/define_select"
       android:includeFontPadding="false"
       android:text="超清"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center|center_vertical"
        android:layout_marginLeft="20dp"
        android:textColor="#FFFFFF"
        android:textSize="11dp"
        android:padding="5dp"
       />

    <ImageView
        android:id="@+id/danmu_setting"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:clickable="true"
        android:paddingLeft="20dp"
        android:scaleType="center"
        android:src="@drawable/danmu_setting" />

    <ImageView
        android:id="@+id/switch_mode"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|right"
        android:clickable="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:scaleType="center"
        android:src="@drawable/switch_mode_to_fullscreen" />
</com.tencent.tga.liveplugin.live.player.ui.video.view.PlayerController>