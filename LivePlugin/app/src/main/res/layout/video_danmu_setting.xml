<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_centerInParent="true"
              android:orientation="vertical"
              android:background="#D904060A"
              android:gravity="center_vertical"
        >
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="152dip"
            android:layout_gravity="center_vertical"
            >

        <LinearLayout
                android:id="@+id/danmu_setting_position_container"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_marginTop="1px"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/danmu_setting_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffffff"
                    android:layout_marginLeft="10dip"
                    android:layout_gravity="center_vertical"
                    android:textSize="11dp"
                    android:text="弹幕位置" />

            <RadioGroup
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="12dip"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    >

                <RadioButton
                        android:id="@+id/danmu_setting_position1"
                        android:layout_width="25dp"
                        android:layout_height="16dp"
                        android:background="@drawable/danmu_setting_position1_bg"
                        android:button="@null"
                        />

                <RadioButton
                        android:id="@+id/danmu_setting_position2"
                        android:layout_width="25dp"
                        android:layout_height="16dp"
                        android:background="@drawable/danmu_setting_position2_bg"
                        android:button="@null"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="15dip"
                        />

                <RadioButton
                        android:id="@+id/danmu_setting_position3"
                        android:layout_width="25dp"
                        android:layout_height="16dp"
                        android:background="@drawable/danmu_setting_position3_bg"
                        android:button="@null"
                        />
            </RadioGroup>

        </LinearLayout>
        <View
                android:layout_below="@+id/danmu_setting_position_container"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#1B2A3A"/>

        <LinearLayout
                android:id="@+id/danmu_setting_size_container"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_marginTop="1px"
                android:layout_below="@id/danmu_setting_position_container"
                android:layout_height="50dip"
                >

            <TextView
                    android:id="@+id/danmu_setting_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:textColor="#ffffffff"
                    android:layout_gravity="center_vertical"
                    android:textSize="11dp"
                    android:text="弹幕大小" />

            <RadioGroup
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="12dip"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                >

                <RadioButton
                    android:id="@+id/danmu_setting_size1"
                    android:layout_width="25dip"
                    android:layout_height="16dp"
                    android:background="@drawable/danmu_setting_size1_bg"
                    android:button="@null"
                    android:checked="true"
                    android:layout_gravity="center_vertical" />

                <RadioButton
                    android:id="@+id/danmu_setting_size2"
                    android:layout_width="25dip"
                    android:layout_height="16dp"
                    android:background="@drawable/danmu_setting_size2_bg"
                    android:button="@null"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:layout_gravity="center_vertical"
                    />

                <RadioButton
                    android:id="@+id/danmu_setting_size3"
                    android:layout_width="25dip"
                    android:layout_height="16dp"
                    android:background="@drawable/danmu_setting_size3_bg"
                    android:button="@null"
                    android:layout_gravity="right|center_vertical" />
            </RadioGroup>
        </LinearLayout>
        <View
                android:layout_width="match_parent"
                android:layout_below="@+id/danmu_setting_size_container"
                android:layout_height="1px"
                android:background="#1B2A3A"/>

        <com.tencent.tga.liveplugin.video.ui.VideoDanmuSeekBar
                android:id="@+id/danmu_setting_bar"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dip"
                />
    </RelativeLayout>
</LinearLayout>
