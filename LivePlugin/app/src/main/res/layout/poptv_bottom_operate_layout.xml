<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mRlyRoot"
    >

    <RelativeLayout
        android:id="@+id/mRlyFullScreenContent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="4dp"
        android:layout_width="93dp"
        android:layout_height="38dp">

        <ImageView
            android:id="@+id/mIvFullScreen"
            android:layout_width="88dp"
            android:layout_height="33dp"
            android:background="@drawable/dialog_player_fullsceen2"
            android:layout_centerInParent="true"
            />

        <ImageView
            android:id="@+id/mIvFullScreenRedPot"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/red_pot"
            android:visibility="gone"
            />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/mLlyOperateContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/mRlyFullScreenContent"
        android:gravity="center_vertical"
        android:layout_marginRight="4dp"
        android:orientation="horizontal"
        >

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/mRlyDefault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        >
        <ImageView
            android:id="@+id/mIvCloseDefault"
            android:layout_width="85dp"
            android:layout_height="29dp"
            android:background="@drawable/dialog_player_default_close"
            android:layout_centerVertical="true"
            />

        <RelativeLayout
            android:id="@+id/mRlyFullScreenDefaultContent"
            android:layout_toRightOf="@id/mIvCloseDefault"
            android:layout_marginLeft="70dp"
            android:layout_width="85dp"
            android:layout_height="32dp">

            <ImageView
                android:id="@+id/mIvFullScreenDefault"
                android:layout_width="85dp"
                android:layout_height="29dp"
                android:background="@drawable/dialog_player_fullsceen"
                android:layout_centerInParent="true"
                />

            <ImageView
                android:id="@+id/mIvFullScreenDefaultRedPot"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/red_pot"
                android:visibility="gone"
                />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>