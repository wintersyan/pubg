    <TextView
        android:layout_width="45dp"
        android:layout_height="21dp"
        android:gravity="center"
        android:text="总积分"
        android:textSize="9dp"
        android:textColor="#BDBDBD"
        android:background="#23252D"
        android:layout_alignParentRight="true"/>

