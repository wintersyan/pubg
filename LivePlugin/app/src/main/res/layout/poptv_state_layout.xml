<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/mRlyRootView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mRlyTitle"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="@drawable/dialogtv_float"
        >
        <TextView
            android:id="@+id/mTvCenterInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text=""
            android:textColor="@color/white"
            android:textSize="11dp"
            />

        <RelativeLayout
            android:id="@+id/mRlyLeftIconBg"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/mTvCenterInfo"
            android:layout_marginRight="10dp"
            android:background="@drawable/team_bg_blue"
            >
            <ImageView
                android:id="@+id/mIvLeftIcon"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/mTvLeftName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/mRlyLeftIconBg"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:textSize="11dp"
            />

        <RelativeLayout
            android:id="@+id/mRlyRightIconBg"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_toRightOf="@id/mTvCenterInfo"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/team_bg_red"
            >
            <ImageView
                android:id="@+id/mIvRightIcon"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/mTvRightName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_toRightOf="@id/mRlyRightIconBg"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:textSize="11dp"
            />
        <ImageView
            android:id="@+id/mIvVideoType"
            android:layout_width="29dp"
            android:layout_height="12dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/living_icon"
            />

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/mLlyMobileNet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:background="#00000000"
        android:visibility="invisible"
        >
        <ImageView
            android:id="@+id/mIvMobileNet"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/not_wifi_play_btn"
            />

        <TextView
            android:id="@+id/mIvMobileNetText"
            android:text="当前非WiFi网络，继续观看将产生流量费用"
            android:textSize="11dip"
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffffff"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/anim_container"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/anim_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/video_loading"
            />
        <TextView
            android:id="@+id/anim_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="直播加载中"
            android:textColor="#FF21A8E0"
            android:paddingLeft="10dip"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:textSize="12dip"/>
    </LinearLayout>
</RelativeLayout>