<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="476dp"
    android:layout_height="275dp"
    android:background="@drawable/schedule_team_view_bg">
    <TextView
        android:id="@+id/integral_details_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="5dp"
        android:textSize="12dp"
        android:textColor="@color/white"/>
    <ImageView
        android:id="@+id/integral_details_view_close"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:padding="2dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="6dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/integral_details_close"/>
    <ListView
        android:id="@+id/integral_details_listView1"
        android:layout_width="64dp"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:scrollbars="none"
        android:layout_below="@+id/integral_details_view_title"
        android:choiceMode="singleChoice"
        android:clipChildren="true" />
    <ListView
        android:id="@+id/integral_details_listView2"
        android:layout_width="395dp"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="6dp"
        android:layout_alignParentLeft="true"
        android:scrollbars="none"
        android:layout_below="@+id/integral_details_view_title"/>

</RelativeLayout>